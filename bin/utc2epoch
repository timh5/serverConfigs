#!/bin/sh
# Convert UTC date format to epoch time (seconds past 1970)
# Examples:
# utc2epoch "2011-01-01 05:04:00"  --  treats date as GMT
# utc2epoch "2011-01-01 05:04:00"  pst  --  treats date as PST 

if [ "$2" == "pst" ];then
	date --date="$1 UTC +8 hours" +%s
else
	date --date="$1 UTC" +%s
fi

